<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <LinearLayout
        android:id="@+id/super_mom_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@mipmap/fine_group_item_image_divider"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:text="@string/super_mom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/avatar_layout1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <com.hwand.pinhaowanr.widget.CircleImageView
                    android:id="@+id/avatar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/contact" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/avatar_layout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <com.hwand.pinhaowanr.widget.CircleImageView
                    android:id="@+id/avatar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/contact" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/avatar_layout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <com.hwand.pinhaowanr.widget.CircleImageView
                    android:id="@+id/avatar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/contact" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/avatar_layout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <com.hwand.pinhaowanr.widget.CircleImageView
                    android:id="@+id/avatar4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/contact" />

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Name" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/avatar_layout5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <com.hwand.pinhaowanr.widget.CircleImageView
                    android:id="@+id/avatar5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/contact" />

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Name" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/avatar_layout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:paddingBottom="6dp"
                android:paddingTop="6dp">

                <com.hwand.pinhaowanr.widget.CircleImageView
                    android:id="@+id/avatar6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/more" />

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/more" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/new_play_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableLeft="@mipmap/fine_group_item_image_divider"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:text="@string/new_play" />

        <RelativeLayout
            android:id="@+id/play_layout1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            >

            <ImageView
                android:id="@+id/play_jmage1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/play_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/more" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/play_layout2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            >

            <ImageView
                android:id="@+id/play_jmage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/play_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/more" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@mipmap/fine_group_item_image_divider"
        android:drawablePadding="6dp"
        android:layout_marginTop="12dp"
        android:gravity="left|center"
        android:text="@string/native_community" />

    <RelativeLayout
        android:id="@+id/flea_market_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        >

        <ImageView
            android:id="@+id/flea_market_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>