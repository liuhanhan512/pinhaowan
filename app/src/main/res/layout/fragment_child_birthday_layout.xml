<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment_white"
    android:orientation="vertical">

    <include
        layout="@layout/titlebar_nor_layout"></include>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="9dp"
            android:singleLine="true"
            android:text="宝宝出生年月"
            android:textColor="@color/text_color_light"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/spinner_month" />

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/spinner_day" />

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_yellow_nor"
        android:gravity="center"
        android:singleLine="true"
        android:text="确认"
        android:textColor="@color/text_color_black"
        android:textSize="17sp" />
</LinearLayout>