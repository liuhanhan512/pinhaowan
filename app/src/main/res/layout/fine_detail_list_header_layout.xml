<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/bottom_border_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_layout"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text="name"
            />

        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/red_corner_bg"
                android:textSize="12sp"
                android:textColor="@color/text_color_red"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                />


            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tickets"
                android:layout_marginLeft="12dp"
                android:text="@string/free"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/text_color_red"
                android:background="@drawable/red_corner_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                />


        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/bottom_border_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/image_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/more"
            />

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_more"
            android:gravity="left|center"
            >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:drawableRight="@mipmap/location"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Tel"
                />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/bottom_border_bg"
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            />


        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hours"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="Tel"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/shield"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/fine_list_text_bg"
        android:text="@string/shield"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone"
        />


</LinearLayout>