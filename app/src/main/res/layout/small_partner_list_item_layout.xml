<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/sign_up_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:background="@mipmap/corner_red_bg"
            android:gravity="center"
            android:text="SignUp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="description"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_red"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/price"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/topic"
            android:textColor="#b7b6b6"
            android:layout_below="@+id/topic"
            android:layout_marginTop="6dp" />

        <View
            android:id="@+id/indicator"
            android:layout_alignBottom="@+id/address"
            android:layout_alignTop="@+id/address"
            android:layout_toRightOf="@+id/address"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/topic"
            android:layout_width="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/color_divider_line"
            android:layout_height="wrap_content">

        </View>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/topic"
            android:layout_toRightOf="@+id/indicator"
            android:layout_marginLeft="6dp"
            android:textColor="#b7b6b6"
            android:layout_below="@+id/topic"
            android:layout_marginTop="6dp" />

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/sign_up"
            android:layout_alignParentRight="true"
            android:background="@mipmap/corner_yellow_bg"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            android:layout_toLeftOf="@+id/sign_up"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/people_count"
            android:layout_toLeftOf="@+id/sign_up"
            android:layout_below="@+id/time"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/color_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/sign_up_count"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/indicator2"
            android:layout_toRightOf="@+id/sign_up_count"
            android:layout_width="1dp"
            android:background="@color/color_divider_line"
            android:layout_height="match_parent">

        </View>

        <LinearLayout
            android:id="@+id/avatar_layout"
            android:weightSum="5"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_toRightOf="@+id/indicator2"
            android:layout_toLeftOf="@+id/avatar6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hwand.pinhaowanr.widget.CircleImageView
                android:layout_weight="1"
                android:id="@+id/avatar1"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.hwand.pinhaowanr.widget.CircleImageView
                android:layout_weight="1"
                android:id="@+id/avatar2"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.hwand.pinhaowanr.widget.CircleImageView
                android:layout_weight="1"
                android:id="@+id/avatar3"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.hwand.pinhaowanr.widget.CircleImageView
                android:layout_weight="1"
                android:id="@+id/avatar4"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.hwand.pinhaowanr.widget.CircleImageView
                android:layout_weight="1"
                android:id="@+id/avatar5"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <com.hwand.pinhaowanr.widget.CircleImageView
            android:id="@+id/avatar6"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp" />
    </RelativeLayout>



</LinearLayout>