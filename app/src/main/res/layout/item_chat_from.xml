<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_chat_from"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/bg_fragment_white"
    android:gravity="center_vertical">

    <com.hwand.pinhaowanr.widget.CircleImageView
        android:id="@+id/avator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/btn_txbig"></com.hwand.pinhaowanr.widget.CircleImageView>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/avator"
        android:layout_marginTop="24dp"
        android:text="测试消息"
        android:textColor="@color/text_color_black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_below="@id/avator"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="测试消息"
        android:textColor="@color/text_color_black"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/avator"
        android:gravity="left|center"
        android:text="测试消息"
        android:textColor="@color/text_color_black"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light_gray"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
