    </com.hwand.pinhaowanr.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/discuss_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/yellow_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/discuss_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/discuss_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/discuss_image"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="true"
                android:padding="0dp"
                android:singleLine="true"
                android:text="@string/discuss"
                android:textSize="15sp" />


        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#cccccc" />


        <RelativeLayout
            android:id="@+id/share_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/yellow_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/gift_ticket_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/share_icon" />

            <TextView
                android:id="@+id/gift_ticket_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/gift_ticket_image"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="true"
                android:padding="0dp"
                android:singleLine="true"
                android:text="@string/share_text"
                android:textSize="15sp" />


        </RelativeLayout>

