<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hwand.pinhaowanr.widget.SwipeRefreshLayout

        android:id="@+id/container"
        android:layout_above="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@mipmap/fine_group_item_image_divider"
                        android:drawablePadding="6dp"
                        android:gravity="left|center"
                        android:textColor="@color/text_color_black"
                        android:textSize="16sp"
                        android:text="@string/activity_detail" />

                    <View
                        android:background="@color/color_divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px">

                    </View>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="12dp"
                        android:drawablePadding="6dp"
                        android:drawableRight="@mipmap/location"
                        android:gravity="left|center"
                        android:text="@string/activity_detail" />

                    <View
                        android:background="@color/color_divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px">

                    </View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:gravity="left|center"
                            android:text="@string/spell_d_time" />

                        <LinearLayout
                            android:id="@+id/time_container"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </LinearLayout>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/people_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="left|center"
                        android:text="@string/activity_detail" />

                    <View
                        android:background="@color/color_divider_line"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px">

                    </View>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:drawableLeft="@mipmap/fine_group_item_image_divider"
                        android:drawablePadding="6dp"
                        android:gravity="left|center"
                        android:text="@string/activity_description" />

                    <ImageView
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:id="@+id/image_description"
                        android:layout_width="match_parent"
                        android:layout_height="120dp" />


                    <TextView
                        android:id="@+id/activity_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:lineSpacingExtra="2dp"
                        android:lineSpacingMultiplier="1.5"
                        android:gravity="left|center"
                        android:text="@string/activity_detail" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/sign_up_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@mipmap/fine_group_item_image_divider"
                        android:drawablePadding="6dp"
                        android:gravity="left|center"
                        android:text="@string/sign_up_time" />

                    <View
                        android:background="@color/color_divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>

                    <LinearLayout
                        android:id="@+id/sign_up_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@mipmap/fine_group_item_image_divider"
                        android:drawablePadding="6dp"
                        android:gravity="left|center"
                        android:text="@string/discuss" />

                    <View
                        android:background="@color/color_divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>

                    <LinearLayout
                        android:id="@+id/comment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@mipmap/fine_group_item_image_divider"
                    android:drawablePadding="6dp"
                    android:gravity="left|center"
                    android:layout_marginLeft="12dp"
                    android:text="@string/project" />

                <RelativeLayout
                    android:background="@drawable/bottom_border_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/one_visit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/one_visit"
                        android:layout_centerVertical="true"
                        android:text="@string/one_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/one_visit_view"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@color/transparent_grey"
                        android:text="@string/spell_d_view"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/one_visit_launch"
                        android:layout_toLeftOf="@+id/one_visit_view"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@mipmap/corner_yellow_bg"
                        android:text="@string/spell_d_launch"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/one_visit_cost"
                        android:layout_toLeftOf="@+id/one_visit_launch"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/one_visit"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/bottom_border_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/stage_visit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/stage_visit"
                        android:layout_centerVertical="true"
                        android:text="@string/stage_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/stage_visit_view"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@color/transparent_grey"
                        android:text="@string/spell_d_view"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/stage_visit_launch"
                        android:layout_toLeftOf="@+id/stage_visit_view"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@mipmap/corner_yellow_bg"
                        android:text="@string/spell_d_launch"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/stage_visit_cost"
                        android:layout_toLeftOf="@+id/stage_visit_launch"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/stage_visit"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/all_visit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">


                    <TextView
                        android:id="@+id/all_visit"
                        android:layout_centerVertical="true"
                        android:text="@string/stage_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/all_visit_view"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@color/transparent_grey"
                        android:text="@string/spell_d_view"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/all_visit_launch"
                        android:layout_toLeftOf="@+id/all_visit_view"
                        android:layout_marginRight="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:background="@mipmap/corner_yellow_bg"
                        android:text="@string/spell_d_launch"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/all_visit_cost"
                        android:layout_toLeftOf="@+id/all_visit_launch"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@+id/all_visit"
                        android:layout_marginLeft="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>
    </com.hwand.pinhaowanr.widget.SwipeRefreshLayout>

</LinearLayout>