<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment_white"
    android:orientation="vertical">

    <include layout="@layout/titlebar_nor_layout"></include>

    <EditText
        android:id="@+id/old_pwd_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@mipmap/bg_input"
        android:hint="原密码"
        android:paddingLeft="9dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="17sp" />


    <EditText
        android:id="@+id/pwd_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@mipmap/bg_input"
        android:hint="新密码"
        android:paddingLeft="9dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/commit_pwd_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:background="@mipmap/bg_input"
        android:hint="再输一次"
        android:paddingLeft="9dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="330dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_yellow_nor"
        android:gravity="center"
        android:singleLine="true"
        android:text="确认"
        android:textColor="@color/text_color_black"
        android:textSize="17sp" />
</LinearLayout>